{
  "name": "automated-content-site",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run build\" \"npm run serve\" \"npm run watch\"",
    "build": "node scripts/build.js",
    "serve": "vite preview --port 3000 --host",
    "watch": "npx chokidar \"articles.json\" \"images/**/*\" -c \"npm run build\"",
    "deploy": "npm run build"
  },
  "dependencies": {
    "chokidar": "^3.5.3",
    "concurrently": "^8.2.2",
    "vite": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0"
  }
}